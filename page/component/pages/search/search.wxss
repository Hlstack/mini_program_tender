page{
  display: flex;
  flex-direction: column;
  height: 100%;
  background: #F8F8F8;
}

/*搜索*/
.search{
  flex: auto;
  display: flex;
  flex-direction: column;
  background: #fff;
}
.search-bar{
  position: fixed;
  width: 100%;
  flex: none;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 5rpx;
  background: #f4f4f4;
}
.search-wrap{
  position: relative;
  flex: auto;
  display: flex;
  align-items: center;
  height: 80rpx;
  padding: 0 20rpx;
  background: #fff;
  border-radius: 6rpx;
}
.search-wrap .icon-search{
  margin-right: 10rpx;
}
.search-wrap .search-input{
  flex: auto;
  font-size: 28rpx;
}
.search-cancel{
  padding: 0 20rpx;
  font-size: 28rpx;
}
.index-bd {
  padding: 0 30rpx 40rpx;
  font-size: 42rpx;
}
.kind-list-title {
  margin: 30rpx 20rpx;
  font-size: 40rpx;
}
.kind-list-item {
  margin: 20rpx 0;
  background-color: #FFFFFF;
  border-radius: 4rpx;
  overflow: hidden;
}
.loading{
  padding: 10rpx;
  text-align: center;
}
.loading:before{
  display: inline-block;
  margin-right: 5rpx;
  vertical-align: middle;
  content: '';
  width: 40rpx;
  height: 40rpx;
}
.loading.complete:before{
  display: none;
}
